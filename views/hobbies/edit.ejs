<% layout('layouts/boilerplate') %> 
<div class="row">
  <h1 class="text-center">Edit Hobby Spot</h1>
  <div class="col-6 offset-3">
    <form action="/hobbies/<%=hobbies._id%>?_method=PUT" method="POST">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" id="title" name="hobbies[title]" value="<%= hobbies.title%>">
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input class="form-control" type="text" id="location" name="hobbies[location]" value="<%= hobbies.location%>">
      </div>

      <div class="mb-3">
        <label class="form-label" for="image">Image URL</label>
        <input class="form-control" type="text" id="location" name="hobbies[image]" value="<%= hobbies.image%>">
      </div>

      <div class="mb3">
        <label for="price" class="form-label">Hobby Spot Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input type="text" class="form-control" id="price" placeholder="0.00" name="hobbies[price]" value="<%= hobbies.price%>">
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea class="form-control" type="text" id="location" name="hobbies[description]"><%= hobbies.description%></textarea>
      </div>

      <div class="mb-3">
        <button class="btn btn-info">Update Hobby Spot</button>
      </div>
    </form>
  
    <footer>
      <a href="/hobbies/<%= hobbies._id %>">Back to Hobby</a>
    </footer>
  </div>
</div>

