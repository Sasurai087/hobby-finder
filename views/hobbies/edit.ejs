<% layout('layouts/boilerplate') %> 
<link rel="stylesheet" href="/css/images.css" class="rel">
<div class="row">
  <h1 class="text-center">Edit Hobby Spot</h1>
  <div class="col-6 offset-3">
    <form action="/hobbies/<%=hobby._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" id="title" name="hobby[title]" value="<%= hobby.title%>" required>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input class="form-control" type="text" id="location" name="hobby[location]" value="<%= hobby.location%>" required>
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb3">
        <label for="price" class="form-label">Hobby Spot Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input type="text" class="form-control" id="price" placeholder="0.00" name="hobby[price]" value="<%= hobby.price%>" required>
        </div>
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea class="form-control" type="text" id="location" name="hobby[description]" required><%= hobby.description%></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label">Upload Image(s)</label>
        <div class="form-file custom-file">
              <input class="form-control custom-file-input" type="file" id="image" name="image" multiple onchange="previewMultiple(event)">
              <label for="image" class="form-label custom-file-label"></label>
          </div>
          <div id="formFile"></div>
      </div>

      <div class="mb-3">
        <% hobby.images.forEach(function(img, i) { %> 
          <img src="<%= img.thumbnail %> " class="img-thumbnail" alt="">
          <div class="form-check-inline">
            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%= img.filename %>">
          </div>
          <label for="image-<%=i%>">Delete?</label>
        <% }) %> 
      </div>

      <div class="mb-3">
        <button class="btn btn-info">Update Hobby Spot</button>
      </div>
    </form>
  
    <footer>
      <a href="/hobbies/<%= hobby._id %>">Back to Hobby</a>
    </footer>
  </div>
</div>

